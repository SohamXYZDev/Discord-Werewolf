# Discord Bot Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Bot Configuration
DISCORD_TOKEN=your_bot_token_here
BOT_PREFIX=!

# Discord IDs (right-click in Discord with Developer Mode enabled to copy IDs)
OWNER_ID=your_discord_user_id
WEREWOLF_SERVER=your_server_id
GAME_CHANNEL=channel_id_for_lobby
DEBUG_CHANNEL=channel_id_for_debug

# Role Names (must match exactly with your Discord server roles)
PLAYERS_ROLE_NAME=Players
ADMINS_ROLE_NAME=Admins
WEREWOLF_NOTIFY_ROLE_NAME=Werewolf Notify

# Admin User IDs (comma-separated list)
ADMINS=admin_id_1,admin_id_2,admin_id_3

# Game Settings
TOKENS_GIVEN=5
TOKEN_RESET=10
IGNORE_THRESHOLD=7
BACKUP_INTERVAL=300

# Files
NOTIFY_FILE=notify.txt
STASIS_FILE=stasis.json
LOG_FILE=debug.txt

# Logging (0=everything, 1=gameplay only, 2=warnings only)
MIN_LOG_LEVEL=1

# Localization
MESSAGE_LANGUAGE=en

# Bot Status Message
PLAYING_MESSAGE={prefix}info | {prefix}help | {prefix}join
